@model HydrographicOffice.Models.OmanbookMVm
@inject CultureLocalizer  _Localizer
@{
    ViewData["Title"] = "Edit";
    Layout = "_AdminLayout";
}

<style>
    .form-check-label {
        margin-top: 2px;
        font-size: 18px;
        margin-left: 160px;
    }
</style>

<h1 class="txtColorBlue text-center"><mark class="highlight">Oman book index</mark></h1>

<hr />

<div class="container mb-5">
    <div class="row d-flex align-items-center justify-content-center">
        <div class="col-md-10 ">

            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />


                <div class="form-input d-flex">
                    <label asp-for="Year" class="control-label align-self-center" style="width:20%;"></label>
                    <input asp-for="Year" class="form-control form-controlNonSpace" />
                    <span asp-validation-for="Year" class="text-danger"></span>
                </div>

                <div class="form-input d-flex">
                    <label class="control-label " style="width:15%;">@_Localizer.Text("UploadFile")</label>
                    <input type="file" asp-for="File" />
                </div>



                <div class="form-input">
                    <input type="submit" value="Save" class="btn mt-4 signup backBlue text-white" style="width:100%;font-size:22px;" />

                </div>


                <div class="form-input">
                    <a asp-action="Index"><i class="fas fa-arrow-left"></i> &nbsp; Back to List</a>
                </div>



            </form>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
