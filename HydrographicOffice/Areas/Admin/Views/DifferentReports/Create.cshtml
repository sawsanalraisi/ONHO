@model HydrographicOffice.Models.DifferentReVm
@inject CultureLocalizer _Localizer

@{
    ViewData["Title"] = "Create";
    Layout = "_AdminLayout";

}



<div class="container mt-5">
    <div class="row d-flex align-items-center justify-content-center">
        <div class="col-md-10 ">

            <form asp-action="Create" method="post" enctype="multipart/form-data">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>


                <h1 class="txtColorBlue text-center"><mark class="highlight">Marine Landmark Reports  </mark></h1>

                <hr />



                <div class="form-input d-flex">


                    <label asp-for="ReportType" class="control-label align-self-center " style="width:15%;"> Select Item: </label>


                    <select asp-for="ReportType" class="form-control">
                        @foreach (EnumCommon.DifferentReportType suit in (EnumCommon.DifferentReportType[])Enum.GetValues(typeof(EnumCommon.DifferentReportType)))
                        {

                            <option value="@(((int)suit).ToString())">@_Localizer.Text(suit.ToString())</option>

                        }


                    </select>

                    <span asp-validation-for="ReportType" class="text-danger"></span>
                </div>




                <div class="form-input">
                    <input asp-for="Position" class="form-control form-controlNonSpace" placeholder="Position" />
                    <span asp-validation-for="Position" class="text-danger"></span>
                </div>

                <div class="form-input">
                    <input asp-for="Region" class="form-control form-controlNonSpace" placeholder="Region" />
                    <span asp-validation-for="Region" class="text-danger"></span>
                </div>




                <div class="form-input">
                    <input asp-for="DifferentRepDate" class="form-control form-controlNonSpace" placeholder="  Different Rep Date" />
                    <span asp-validation-for="DifferentRepDate" class="text-danger"></span>
                </div>



                <div class="form-input">
                    <input asp-for="Email" class="form-control form-controlNonSpace" placeholder="Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-input">
                    <input asp-for="Phone" class="form-control form-controlNonSpace" placeholder="Phone" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>

                <div class="form-input">
                    <input asp-for="Organization" class="form-control form-controlNonSpace" placeholder="Position" />
                    <span asp-validation-for="Organization" class="text-danger"></span>
                </div>


                <div class="form-input">
                    <input asp-for="Character" class="form-control form-controlNonSpace" placeholder="Character" />
                    <span asp-validation-for="Character" class="text-danger"></span>
                </div>

                <div class="form-input">
                    <input asp-for="Purpose" class="form-control form-controlNonSpace" placeholder="Position" />
                    <span asp-validation-for="Purpose" class="text-danger"></span>
                </div>



                <div class="form-input">
                    <textarea asp-for="Description" class="form-control3 form-control2  " rows="5" placeholder=" Description . . ."></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>



                <div class="form-input mt-3 d-f text-center">
                    <div class="BoxDach p-3">
                        <label for="file" class="form-label">
                            <i class="fa-solid fa-cloud-arrow-up inputfileicon"></i>
                        </label>
                        <br />
                        <input asp-for="Files" type="file" class="" name="Files" id="Files" multiple onchange="updateList()">
                        <span id="fileList"></span>
                    </div>
                </div>

                <div class="form-input mb-5">
                    <button type="submit" class="btn mt-4 signup backBlue text-white" style="width:100%;font-size:22px;"> Send Marine Reports   </button>

                </div>





            </form>

        </div>
    </div>
</div>




@section Scripts {


    <script>
        updateList = function () {
            var input = document.getElementById('Files');
            var output = document.getElementById('fileList');
            var children = "";
            for (var i = 0; i < input.files.length; ++i) {
                children += '<li>' + input.files.item(i).name + '</li>';
            }
            output.innerHTML = '<ul>' + children + '</ul>';
        }
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}








