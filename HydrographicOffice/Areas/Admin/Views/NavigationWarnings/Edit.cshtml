@model HydrographicOffice.Models.NavigationWVm
@inject CultureLocalizer _Localizer
@{
    ViewData["Title"] = "Edit";
    Layout = "_AdminLayout";
}




<style>

    .form-check-label {
        margin-top: 2px;
        font-size: 18px;
        margin-left: 160px;
    }
</style>

<h1 class="txtColorBlue text-center"><mark class="highlight">Navigation Warning </mark></h1>

<hr />



<div class="container mb-5">
    <div class="row d-flex align-items-center justify-content-center">
        <div class="col-md-10 ">

            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />




                <div class="form-input d-flex">
                    <label asp-for="Status" class="control-label align-self-center" style="width:20%;"></label>
                    <select asp-for="Status" class="form-control form-controlNonSpace">
                        @foreach (EnumCommon.NavigationWarning suit in (EnumCommon.NavigationWarning[])Enum.GetValues(typeof(EnumCommon.NavigationWarning)))
                        {
                            <option value="@(((int)suit).ToString())">@_Localizer.Text(suit.ToString())</option>
                        }
                    </select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>


                <div class="form-input d-flex">
                    <label asp-for="NavWarnDesc" class="control-label align-self-center" style="width:20%;"></label>
                    <textarea asp-for="NavWarnDesc" class="form-control3 form-control2  " rows="5" placeholder=" Description . . ."></textarea>
                    <span asp-validation-for="NavWarnDesc" class="text-danger"></span>
                </div>


                <div class="form-input d-flex">
                    <label asp-for="NavFileName" class="control-label align-self-center" style="width:20%;"></label>
                    <input asp-for="NavFileName" class="form-control form-controlNonSpace" />
                    <span asp-validation-for="NavFileName" class="text-danger"></span>
                </div>


                <div class="form-input d-flex">
                    <label asp-for="WarnNumber" class="control-label align-self-center" style="width:20%;"></label>
                    <input asp-for="WarnNumber" class="form-control form-controlNonSpace" />
                    <span asp-validation-for="WarnNumber" class="text-danger"></span>
                </div>


                <div class="form-input d-flex">
                    <label asp-for="WaringDate" class="control-label align-self-center" style="width:20%;"></label>
                    <input asp-for="WaringDate" class="form-control form-controlNonSpace" />
                    <span asp-validation-for="WaringDate" class="text-danger"></span>
                </div>




                <div class="form-input d-flex">
                    <label class="control-label " style="width:15%;">@_Localizer.Text("UploadFile")</label>
                    <input type="file" asp-for="File" />
                </div>

                <div class="form-input">
                    <input type="submit" value="Save" class="btn mt-4 signup backBlue text-white" style="width:100%;font-size:18px;" />
                </div>


                <div class="d-flex mt-5 list-style">
                    <a asp-action="Index"><i class="fas fa-arrow-left"></i> &nbsp; Back to List</a>
                </div>



            </form>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}