@model ChangePasswordViewModel
@inject CultureLocalizer Localizer
@{
    ViewData["Title"] = "SupportData";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">

        @*<h2>@Localizer.Text("News_List")</h2>*@
        <p></p>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-area="Admin" asp-controller="Home" asp-action="Index">@Localizer.Text("Home")</a>
            </li>
            <li class="breadcrumb-item active">
                <strong>@Localizer.Text("ChangePassword")</strong>
            </li>
        </ol>
    </div>

</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>@Localizer.Text("ChangePassword")</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>

                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">

                    <form class="m-t" role="form" method="post" enctype="multipart/form-data">


                        <br />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <br />

                        <div class="form-group  row">
                            <label class="col-sm-2 col-form-label">@Localizer.Text("OldPassword")</label>

                            <div class="col-sm-10">
                                <input type="text" asp-for="OldPassword" class="form-control">
                                <span asp-validation-for="OldPassword" class="text-danger"></span>
                            </div>

                        </div>

                        <div class="form-group  row">
                            <label class="col-sm-2 col-form-label">@Localizer.Text("NewPassword")</label>

                            <div class="col-sm-10">
                                <input type="text" asp-for="NewPassword" class="form-control">
                                <span asp-validation-for="NewPassword" class="text-danger"></span>
                            </div>

                        </div>
                      
                        <br />

                        <div class="form-group row">
                            <div class="col-sm-4 col-sm-offset-2">
                                <a class="btn btn-white btn-sm" asp-area="Admin" asp-controller="Frequency" asp-action="Index">@Localizer.Text("BackToList")</a>
                                <button class="btn btn-primary btn-sm" type="submit">@Localizer.Text("Save")</button>
                            </div>
                        </div>








                    </form>

                </div>
            </div>
        </div>
    </div>
</div>




