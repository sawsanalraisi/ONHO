@model HydrographicOffice.Models.LoginRegisterVm
@inject CultureLocalizer Localizer

@{
    Layout = null;
}

<form method="post" action="@Url.Action("Register","User")">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="card px-5 py-5 ">
        <h2 class="mt-3 txtColorGold text-center">@Localizer.Text("RegisterNew")</h2>

        <small class="mt-2 txtColorBlue">@Localizer.Text("AunnoceToCreateEamil")</small>

        <div class="form-input">

            <i class="fa fa-user search-icon2"></i>

            <input type="text" class="form-control" placeholder="@Localizer.Text("UserName")" asp-for="UserName">

            <span asp-validation-for="UserName" class="text-danger"></span>

        </div>


        <div class="form-input">
            <i class="fa-solid fa-user search-icon2"></i>
            <input type="text" class="form-control" placeholder="@Localizer.Text("FullName")" asp-for="FullName">
            <span asp-validation-for="FullName" class="text-danger"></span>

        </div>


        <div class="form-input">
            <i class="fa-solid fa-building search-icon2"></i>
            <input type="text" class="form-control" placeholder="@Localizer.Text("OrgraizationName")" asp-for="OrgraizationName">
            <span asp-validation-for="OrgraizationName" class="text-danger"></span>

        </div>

        <div class="form-input">
            <i class="fa-solid fa-phone search-icon2"></i>
            <input type="text" class="form-control" placeholder="@Localizer.Text("Phone")" asp-for="PhoneNumber">
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>

        </div>


        <div class="form-input">
            <i class="fa-solid fa-location-pin search-icon2"></i>
            <input type="text" class="form-control" placeholder="@Localizer.Text("Address")" asp-for="Address">
            <span asp-validation-for="Address" class="text-danger"></span>

        </div>

        <div class="form-input">
            <i class="fa-solid fa-envelope search-icon2"></i>
            <input type="text" class="form-control" placeholder="@Localizer.Text("Email")" asp-for="Email">
            <span asp-validation-for="Email" class="text-danger"></span>

        </div>

        <div class="form-input">
            <i class="fa-solid fa-lock search-icon2"></i>
            <input type="text" class="form-control" placeholder="@Localizer.Text("Password")" asp-for="Password">
            <span asp-validation-for="Password" class="text-danger"></span>

        </div>
        <div class="form-check">

            <input class="form-check-input" type="checkbox" value="" id="flexCheckChecked" checked="">
            <label class="form-check-label txtColorGold " for="flexCheckChecked"> "@Localizer.Text("Agree")"</label>

        </div>

        <button class="btn mt-4 signup backBlue text-white">@Localizer.Text("RegisterNew") </button>


        <div class="text-center mt-4">
            <span class="txtColorGold">عضو بالفعل ؟</span>
            <a href="#" class="text-decoration-none txtColorBlue">تسجيل الدخول</a>
        </div>
    </div>

</form>





<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>