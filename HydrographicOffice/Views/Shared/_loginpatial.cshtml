@model HydrographicOffice.Models.LoginViewModel
@inject CultureLocalizer Localizer
@{
    Layout = null;
}

<form method="post" id="form">

    <div id="errodiv" class="text-danger"></div>

    <div class="card px-5 py-5 ">
        <p>@ViewBag.erro</p>
        <h2 class="mt-3 txtColorGold text-center">  تسجيل الدخول  </h2>

        <div class="form-input">
            <i class="fa-solid fa-envelope search-icon2"></i>
            <input type="text" class="form-control" required placeholder="عنوان بريد الكتروني " asp-for="Email" id="email">
            <span asp-validation-for="Email" class="text-danger"></span>

        </div>
        <div class="form-input">
            <i class="fa-solid fa-lock search-icon2"></i>
            <input type="text" class="form-control" required placeholder="كلمه السر" asp-for="Password" id="password">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary block full-width m-b">@Localizer.Text("Login")</button>

        <div class="text-center mt-4">
            <a href="@Url.Action("RenderRegisterion","User")"> انشاء حساب جديد</a>
        </div>

    </div>

</form>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>

<script>
    $('#form').submit(function (evt) {
        evt.preventDefault();
        login();
    });

    function login() {
    debugger;
                   var email = $("#email").val();
                   var password = $("#password").val();
        var url = '@Url.Action("UserLogin2", "User")';


        if (email != null && email != '' && password != null && password!='') {
            $.ajax({
                url: url,
                Type: "Post",
                data: { "Email": email, "Password": password },
                dataType: 'text',
                success: function (response) {
                    var result = JSON.parse(response)
                    debugger;
                    if (result.sates) {
                         location.reload(true);
                } else {
                        $("#errodiv").html("");
                        $("#errodiv").html(result.erro)

                    }
                    // console.log("success");
                    //error: function() {
                    //    console.log("falid");
                }
            }
            )
        } else {

        }
