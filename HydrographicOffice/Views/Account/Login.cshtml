@model LoginViewModel

@{
    Layout = "_LoginLayout";
    ViewData["Title"] = "Login";
}
@inject CultureLocalizer Localizer
<form class="m-t" role="form" method="post">

    @*<h3>@Localizer.Text("Login")</h3>*@
    <br />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <br />
    <div class="form-group">
        <input type="text" asp-for="Email" class="form-control" placeholder="@Localizer.Text("Email")">
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="password" asp-for="Password" class="form-control" placeholder="@Localizer.Text("Password")">
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>


    <br />
    <button type="submit" class="btn btn-primary block full-width m-b">@Localizer.Text("Login")</button>



    @*<p class="text-muted text-center">
            <small>Do not have an account?</small>
        </p>
        <a class="btn btn-sm btn-white btn-block" href="register.html">Create an account</a>*@
</form>
<br />



